<nav class="breadcrumb">
  <%= link_to "Main floor", :northern_beaches_no_splash %> &nbsp;&gt;&nbsp;
  <%= link_to "All Woman Show/Home and Lifestyle Show", :northern_beaches_ne_section %> &nbsp;&gt;&nbsp;
  <span><%= @stall.name %></span>
</nav>
<div class="stand-number">
  Stand
  <div class="number"><%= @stall.stall_number %></div>
</div>
<div class="copy">
  <div class="clearfix">
    <div class="main-column">
      <%= image_tag "company/on-the-fuze/logo.png", :class => "logo" %>
      <h1 class="company-name"><%= @stall.name %></h1>



      <div class="brand-divider"></div>
      <section>
        <article class="clearfix">
          <div class="copy-container">
            <p class="company-description">
              <span class="lbl-about-us">Who we are</span>
            </p>
            <p>
              <%= @stall.description_one %>
            </P>
          </div>
        </article>
        <article class="clearfix">
          <div class="copy-container">
            <p class="company-description">
              <span class="lbl-about-us">What we do</span>
            </p>
            <p>
              <%= @stall.description_two %>
            </P>
          </div>
        </article>
      </section>
    </div>
    <div class="side-column">
      <div class="image-header">
        Your Stall Hosts
      </div>
      <div id="slides">
        <div class="slides_container">
          <div>
            <%= image_tag "company/on-the-fuze/csr-01.jpg", :class => "csr" %>
          </div>
          <div>
            <%= image_tag "company/on-the-fuze/csr-01.jpg", :class => "csr" %>
          </div>
          <div>
            <%= image_tag "company/on-the-fuze/csr-01.jpg", :class => "csr" %>
          </div>
        </div>
      </div>
      <div class="widget">
        <h3>Expo Special</h3>
        <p class="special">
          30% off Kickstart Package
        </p>
        <p>Ask one of our friendly staff at the stand about it!</p>
      </div>
      <div class="widget">
        <h3>Follow Us</h3>
        <p class="special">
          <%= image_tag "social-media/Facebook.png", :class => "" %>
          <%= image_tag "social-media/Google+.png", :class => "" %>
          <%= image_tag "social-media/Pinterest.png", :class => "" %>
          <%= image_tag "social-media/Twitter.png", :class => "" %>
        </p>
      </div>
    </div>
  </div>
  <div class="footer vendor">
    Contact <%= @stall.name %>: <span class="contact"><a href="tel://0-733-951-972"><%= @stall.phone %></a></span> |
    <span class="contact"><a href="mailto:<%= @stall.email %>"><%= @stall.email %></a></span> |
    <span class="contact"><%= @stall.address %></span>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    //wire up slideshow
    $("#slides").slides({
      preload: true,
      generatePagination: false,
      play: 3000
    });
  });
</script>
