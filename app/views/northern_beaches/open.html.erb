<script>
  $.urlParam = function(name){
      var results = new RegExp('[\\?&]' + name + '=([^&#]*)').exec(window.location.href);
      if (!results)
      {
          return 0;
      }
      return results[1] || 0;
  }

  $('#tradeshowmap').maphilight({fillColor: 'ed5100', strokeColor: '888800', shadowFrom: 'fill', shadowRadius: 16, shadowX: 10, shadowY: 10});

  $(document).ready( function() {

    $('#link_NE').mouseover(function(e) {
      $('#area_NE').mouseover();
      }).mouseout(function(e) {
      $('#area_NE').mouseout();
    });

    $('#link_NW').mouseover(function(e) {
      $('#area_NW').mouseover();
      }).mouseout(function(e) {
      $('#area_NW').mouseout();
    });

    $('#link_SE').mouseover(function(e) {
      $('#area_SE').mouseover();
      }).mouseout(function(e) {
      $('#area_SE').mouseout();
    });

    $('#link_SW').mouseover(function(e) {
      $('#area_SW').mouseover();
      }).mouseout(function(e) {
      $('#area_SW').mouseout();
    });

    //show a welcome dialog
    $('.widget.sponsors').hide();
    var showsplash = $.urlParam('splash');
    if (showsplash != 'none')
      $.colorbox({inline:true, href:"#welcome", height:615});

    //wire up close buttons
    $('.btn-close').click( function() {
      $.colorbox.close();
      $('.widget.sponsors').show();
    });

    //wire up slideshow
    $("#slides").slides({
        preload: true,
        generatePagination: false,
        play: 3000
    });

  });

</script>
