  </div>

  <div class="field">
    <%= f.label :stall_images %>
    <%= f.file_field('stall_stall_images_image', multiple: true, name: "stall[stall_images_attributes][][image]") %>
  </div>


  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :description_one %><br />
    <%= f.text_area :description_one %>
  </div>
  <div class="field">
    <%= f.label :description_two %><br />
    <%= f.text_area :description_two %>
  </div>
  <div class="field">
    <%= f.label :facebook %><br />
    <%= f.text_field :facebook %>
