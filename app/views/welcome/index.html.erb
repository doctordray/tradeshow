<nav class="breadcrumb">
  <span> Main floor</span>
</nav>
<div class="clearfix">
  <div class="main-column">
    <h2>Main Floor</h2>
    <div class="brand-divider"></div>
    <p>Please select a section of the map for a closer view</p>
    <%= image_tag 'tradeshow-map.png', :name => 'tradeshowmap', :id => 'tradeshowmap', :usemap => '#m_tradeshowmap', :width=>"496", :height=>"600" %>
    <map name="m_tradeshowmap" id="m_tradeshowmap">
      <area shape="poly" coords="5,293,272,293,272,597,5,597,5,293" href="javascript:;" id="area_SW" title="Pets Expo/Camping & Outdoors Expo" alt="Pets Expo/Camping & Outdoors Expo" />
      <area shape="rect" coords="5,7,206,292" href="javascript:;" id="area_NW" title="Camping & Outdoors Expo" alt="Camping & Outdoors Expo" />
      <area shape="rect" coords="272,237,496,493" href="javascript:;" id="area_SE" title="Home Show/Retired Life Expo" alt="Home Show/Retired Life Expo" />
      <area shape="rect" coords="270,4,496,232" href="<%= url_for(:ne_section) %>" id="area_NE" title="All Woman Show/Home & Lifestyle Show" alt="All Woman Show/Home & Lifestyle Show" />
    </map>
  </div>
  <div class="side-column">
    <%= render "shared/sponsors" %>
    <div class="vertical-section-selector">
      <h3>Available Sections</h3>
      <nav>
        <%= link_to "All Woman Show/Home & Lifestyle Show", :ne_section, :id=>"link_NE" %>
        <%= link_to "Camping & Outdoors Expo", '#', :id=>"link_NW" %>
        <%= link_to "Home Show/Retired Life Expo", '#', :id=>"link_SE" %>
        <%= link_to "Pets Expo/Camping & Outdoors Expo", '#', :id=>"link_SW" %>
      </nav>
    </div>
  </div>
</div>

<div class="inline-content">
  <div class="inline" id="welcome">
    <div class="colorbox-content">

      <h2>Welcome to an interactive demo for Your Northern Beaches Expo</h2>

      <p>Users can click on the different sections of the map to explore the expo. For the purposes of the demo, only the
          <span style="font-weight: bold;">All Woman Show/Home & Lifestyle Show</span> section can be clicked.</p>
    </div>
    <button class="btn-close">Click here start the demo!</button>
  </div>
</div>

<script>
  $.urlParam = function(name){
      var results = new RegExp('[\\?&]' + name + '=([^&#]*)').exec(window.location.href);
      if (!results)
      {
          return 0;
      }
      return results[1] || 0;
  }

  $('#tradeshowmap').maphilight({fillColor: 'ed5100', strokeColor: '888800', shadowFrom: 'fill', shadowRadius: 16, shadowX: 10, shadowY: 10});

  $(document).ready( function() {

    $('#link_NE').mouseover(function(e) {
      $('#area_NE').mouseover();
      }).mouseout(function(e) {
      $('#area_NE').mouseout();
    });

    $('#link_NW').mouseover(function(e) {
      $('#area_NW').mouseover();
      }).mouseout(function(e) {
      $('#area_NW').mouseout();
    });

    $('#link_SE').mouseover(function(e) {
      $('#area_SE').mouseover();
      }).mouseout(function(e) {
      $('#area_SE').mouseout();
    });

    $('#link_SW').mouseover(function(e) {
      $('#area_SW').mouseover();
      }).mouseout(function(e) {
      $('#area_SW').mouseout();
    });

    //show a welcome dialog
    var showsplash = $.urlParam('splash');
    if (showsplash != 'none')
      $.colorbox({inline:true, href:"#welcome", height:292});

    //wire up close buttons
    $('.btn-close').click( function() {
      $.colorbox.close();
    });

  });

</script>
